<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="kr.spring.silli.quiz.mapper.QuizMapper">

<insert id="faile_insert" parameterType="kr.spring.silli.quiz.vo.QuestionVO">
			<![CDATA[
			insert ignore 
				into 
					fail_list(
							question
							,answer
							,user_id
							)
					values(
							#{question}
							,#{answer}
							,#{user_id}
							)
			]]>
	</insert>
	
	
	<delete id="faile_del" parameterType="kr.spring.silli.quiz.vo.faileVO">
	<![CDATA[
		delete 
			from fail_list
	]]>
	<choose>
		<when test="user_id != null">
		<![CDATA[
		where 
			question=#{question}
			AND
			user_id=#{user_id}
		]]>
		</when>
	</choose>
	</delete>
	
	<select id="faile_chk" parameterType="kr.spring.silli.quiz.vo.QuestionVO" resultType="kr.spring.silli.quiz.vo.QuestionVO">
		<![CDATA[
			select
				question,
				answer
			from
				fail_list
		]]>
		<choose>
		<when test="user_id !=null">
		<![CDATA[
		where 
			user_id=#{user_id} 
				order by rand()
		]]>
		</when>
	</choose>
	</select>
	
	<select id="chk" parameterType="kr.spring.silli.quiz.vo.QuestionVO" resultType="kr.spring.silli.quiz.vo.QuestionVO">
	<![CDATA[
		select question
			   ,answer
			   ,user_id
			   ,quiz_idx
		from quiz 
		where(
			question
			,answer
			,user_id
			) 
			not in(
				select question
						,answer
						,user_id 
				from ans ) AND user_id=#{user_id} order by rand()
		]]>	
		
	</select>
	
	<select id="requiz" parameterType="kr.spring.silli.quiz.vo.QuestionVO" resultType="kr.spring.silli.quiz.vo.QuestionVO">
	<choose>
		<when test="user_id != null">
		<![CDATA[
		select question
			   ,answer
			   ,user_id 
		from quiz 
		where(
			question
			,answer
			,user_id
			) 
			not in(
				select question
						,answer
						,user_id 
				from ans ) AND user_id=#{user_id} order by rand()
		]]>
		</when>
		</choose>
	</select>
	
	<delete id="quiz_del" parameterType="java.util.List">
		delete 
			from quiz
		where quiz_idx IN
			<foreach collection="list" item="item" index="i" open="(" separator="," close=")">
		      #{item}
		    </foreach>
	</delete>
	
	<delete id="ans_del" parameterType="kr.spring.silli.quiz.vo.QuestionVO">
		<choose>
		 <when test="user_id != null">
		<![CDATA[
			delete 
			from
				ans
			where 
				user_id=#{user_id}	
		]]>
		</when>
		</choose>
	</delete>
	
	<insert id="ans_ins" parameterType="kr.spring.silli.quiz.vo.QuestionVO">
		<choose>
			<when test="user_id != null">
		<![CDATA[
			insert into 
				ans(
					question
					,answer
					,user_id)
				values(
					#{question}
					,#{answer}
					,#{user_id}
					)
		]]>
		</when>
		</choose>
	</insert>
	
	<insert id="quiz_write" parameterType="java.util.List">
		insert into
			quiz
				(
				question
				,answer
				,user_id
				)
		values
		<foreach collection="list" item="item" separator=",">
		(
	      #{item.question},
	      #{item.answer},
	      #{item.user_id}
	    )
	    </foreach>
	</insert>
	
	<update id="quiz_update" parameterType="java.util.List">
     <foreach collection="list" item="offer"  index="index"  separator=";" >
			update
				quiz
			set
				question=#{offer.question},
				answer=#{offer.answer},
				user_id='twesd11'
			where quiz_idx=#{offer.quiz_idx}
	</foreach>
				
	</update>
</mapper>